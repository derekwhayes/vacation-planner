<?xml version="1.0" encoding="utf-8"?>
    <!-- TODO: fix table formatting -->
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:stretchColumns="1">

        <TextView
            android:id="@+id/report_name_text"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:padding="10dp"
            android:gravity="start"
            tools:text="Vacation Name"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/report_start_date_text" />

        <TextView
            android:id="@+id/report_start_date_text"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:padding="10dp"
            android:gravity="start"
            tools:text="Start Date"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/report_name_text"
            app:layout_constraintEnd_toStartOf="@id/report_end_date_text" />

        <TextView
            android:id="@+id/report_end_date_text"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:padding="10dp"
            android:gravity="start"
            tools:text="End Date"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/report_start_date_text"
            app:layout_constraintEnd_toStartOf="@id/report_accommodations_text" />

        <TextView
            android:id="@+id/report_accommodations_text"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:padding="10dp"
            android:gravity="start"
            tools:text="Accommodations"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/report_end_date_text"
            app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>

